{% extends 'base.html.twig' %}

{% block title %}Rédiger un avis - Relais & Châteaux{% endblock %}

{% block body %}
    <div class="min-h-screen bg-[#fdfcf9] py-20 px-4">
        <div class="max-w-xl mx-auto">

            <div class="text-center mb-12">
                <span class="text-stone-400 uppercase tracking-[0.3em] text-xs mb-4 block">Votre Expérience</span>
                <h1 class="text-3xl font-serif text-stone-900 mb-4">{{ event.name }}</h1>
                <div class="w-12 h-px bg-stone-300 mx-auto"></div>
            </div>

            <div class="bg-white border border-stone-100 p-10 shadow-sm">
                {{ form_start(form, {'attr': {'class': 'space-y-8'}}) }}

                <div>
                    <label class="text-[10px] uppercase tracking-widest text-stone-400 mb-3 block">Note d'excellence (1 à 5)</label>
                    {{ form_widget(form.note, {'attr': {'class': 'w-full bg-stone-50 border border-stone-100 py-3 px-4 outline-none focus:border-stone-800 transition-colors font-serif text-lg'}}) }}
                    <div class="text-red-500 text-[10px] mt-1 italic">{{ form_errors(form.note) }}</div>
                </div>

                <div>
                    <label class="text-[10px] uppercase tracking-widest text-stone-400 mb-3 block">Commentaire</label>
                    {{ form_widget(form.commentaire, {'attr': {'class': 'w-full bg-stone-50 border border-stone-100 py-3 px-4 outline-none focus:border-stone-800 transition-colors font-sans font-light text-sm min-h-[150px]'}}) }}
                    <div class="text-red-500 text-[10px] mt-1 italic">{{ form_errors(form.commentaire) }}</div>
                </div>

                <div class="pt-4">
                    <button type="submit" class="w-full bg-stone-900 text-white font-sans text-xs uppercase tracking-[0.2em] py-4 hover:bg-stone-800 transition-all duration-300">
                        Envoyer pour modération
                    </button>
                    <p class="text-center text-[9px] text-stone-400 uppercase tracking-tighter mt-4 italic">
                        Conformément à la règle 1, votre avis sera validé par le responsable avant publication[cite: 138, 151].
                    </p>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
